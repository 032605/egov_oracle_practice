<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardDAO">

	
	<resultMap id="BoardList" type="demo.com.bbs.service.BoardVO">
		<result property="bbsId" column="BBS_ID"/>
		<result property="nttCn" column="NTT_CN"/>
		<result property="nttId" column="NTT_ID"/>
		<result property="nttSj" column="NTT_SJ"/>
		<result property="frstRegisterId" column="FRST_REGISTER_ID"/>
		<result property="frstRegisterPnttm" column="FRST_REGIST_PNTTM"/>
	</resultMap>

	<select id="BoardList" parameterType="demo.com.bbs.service.BoardVO" resultMap="BoardList">
		
		SELECT NTT_ID,BBS_ID,NTT_SJ,NTT_CN,FRST_REGISTER_ID,FRST_REGIST_PNTTM	    
		FROM COMTNBBS

	</select>

	<insert id="Boardinsert" parameterType="demo.com.bbs.service.BoardVO">
		INSERT INTO COMTNBBS
		(NTT_ID,BBS_ID,NTT_SJ,NTT_CN,FRST_REGISTER_ID,FRST_REGISTER_ID)
		VALUES (#{nttId},#{bbsId},#{nttSj},#{nttCn},#{frstRegisterId},SYSDATE())
	</insert>
	
</mapper>